<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_app"
    tools:context=".Activites.DetailsTripsActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/preview"
        android:contentDescription="@string/trippreview" />


    <TextView
        android:id="@+id/tripTitle"
        android:layout_below="@id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trip_number_contracted"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="31sp"
        android:fontFamily="@font/mina_bold"
        android:layout_centerHorizontal="true"
        />

    <RelativeLayout
        android:layout_below="@id/tripTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:paddingRight="50dp"
        android:paddingLeft="50dp">

        <TextView
            android:id="@+id/startPositionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/starting_default"
            android:textColor="@color/white"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/endPositionText"
            android:layout_below="@id/startPositionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/end_default"
            android:textColor="@color/white"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/startText"
            android:layout_below="@+id/endPositionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/beginning_default"
            android:textColor="@color/white"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/endText"
            android:layout_below="@id/startText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ending_default"
            android:textColor="@color/white"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/durationText"
            android:layout_below="@id/endText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_duration"
            android:textColor="@color/white"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/distanceText"
            android:layout_below="@id/durationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_distance"
            android:textColor="@color/white"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/speedAverageText"
            android:layout_below="@id/distanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_speed"
            android:textColor="@color/white"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/maxSpeedText"
            android:layout_below="@id/speedAverageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_max_speed"
            android:textColor="@color/white"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/pauseText"
            android:layout_below="@id/maxSpeedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_break"
            android:textColor="@color/white"
            android:textSize="17sp"
            />
    </RelativeLayout>

</RelativeLayout>